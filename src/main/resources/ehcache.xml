<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="com.mycompany.myapp.domain.User" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Authority" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.User.authorities" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.PersistentToken" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Author" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Author.books" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Book" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Owner" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Owner.cars" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Car" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.ClassRoom" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Student" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Person" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Person.companies" uses-template="simple"/>

    <cache alias="com.mycompany.myapp.domain.Company" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
